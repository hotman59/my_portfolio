<div id="post_show_content"class="skinny_wrapper wrapper_padding">
<header>
  <p class="date">
    <%= @post.created_at.strftime('%A, %B %d') %>
  </p>
    <h1><%= @post.title %></h1>
    <%= image_tag @post.image.url(:medium) %>

    <hr>
</header>

<div id="content">
  <%= markdown @post.content %>
</div>
<% if user_signed_in? %>
<div id="admin_links">
  <%= link_to "Edit", edit_project_path(@post)%>
  <%= link_to "Delete", project_path(@post), method: :delete, data: { confirm: "Are you sure"}%>
</div>
<% end %>

<hr>

<%= render 'disqu'%>
</div>
