<div id="posts_wrapper" class="skinny_wrapper">
  <% @posts.each do |post| %>
  <div class="post">
    <p class="date"><%= post.created_at.strftime('%A, %B  %d') %></p>
    <h2>
      <a href="#"><%= link_to post.title, post %></a>
    </h2>
    <div class="mini_pict">

    <%= image_tag post.image.url(:thumb) %>
  </div>

    <hr>
  </div>
  <%end%>
</div>
