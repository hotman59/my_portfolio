<h1 id="page_title">page contact 1</h1>

<div class="">
  <%= form_for @contact do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, required: true %>
  <br>
  <%= f.label :email %><br>
  <%= f.text_field :email, required: true %>
  <br>
  <%= f.label :message %><br>
  <%= f.text_field :message, as: :text %>

  <div class="hidden">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname, hint:'leave this field blank' %>
  </div>
<br>
<%= f.submit 'Send Message', class:"button"%>
  <% end %>

</div>
